<h2>All Pokemons</h2>
<div class="pokemon">
<p><a href="/pokemons/new">New Pokemon</a></p>
<% @pokemons.each do |pokemon|%>
  <p><a href="/pokemons/<%= pokemon.id %>"><%= pokemon.name %></a></p>
<% end %>
</div>

<h2>All Trainers</h2>
<p class="trainers"><a href="/trainers/new">New Trainer</a></p>
<% @trainers.each do |trainer|%>
  <p><a href="/trainers/<%= trainer.id%>"><%= trainer.name %></a></p>
<% end %>
